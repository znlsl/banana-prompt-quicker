{
    "manifest_version": 3,
    "name": "banana-prompt-quicker",
    "version": "1.0",
    "description": "Prompts quicker is ALL you üçå need",
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "permissions": [
        "storage"
    ],
    "host_permissions": [
        "https://raw.githubusercontent.com/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://aistudio.google.com/*",
                "https://gemini.google.com/*"
            ],
            "js": [
                "prompts.js",
                "modal.js",
                "content.js"
            ],
            "run_at": "document_idle"
        }
    ]
}