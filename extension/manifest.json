{
    "manifest_version": 3,
    "name": "Banana Prompt Quicker",
    "version": "1.3.0",
    "description": "Prompts quicker is ALL you üçå need",
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },
    "permissions": [
        "storage",
        "contextMenus"
    ],
    "host_permissions": [
        "https://raw.githubusercontent.com/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "lib/dom.js",
                "lib/utils.js",
                "lib/store.js",
                "services/fetcher.js",
                "services/config.js",
                "services/prompts.js",
                "sites/base.js",
                "sites/universal.js",
                "sites/ai_studio.js",
                "sites/gemini.js",
                "ui/search.js",
                "ui/card.js",
                "ui/announcement.js",
                "ui/prompt_form.js",
                "ui/pagination.js",
                "ui/modal.js",
                "content.js"
            ],
            "run_at": "document_idle"
        }
    ],
    "browser_specific_settings": {
        "gecko": {
            "id": "banana-prompt-quicker@glidea.io",
            "strict_min_version": "109.0"
        }
    }
}